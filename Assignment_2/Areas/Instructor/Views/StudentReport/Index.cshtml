@model IEnumerable<Assignment_2.GroupMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOperation.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                
                Group Report
            </h1>
            <ol class="breadcrumb">
                <li>
                   Home
                </li>
                <li class="active">StudentRepport</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div id="accordion" class="panel-group">
                @foreach (var item in Model)
                {

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a href="#@item.Id" data-parent="#accordion" data-toggle="collapse" class="accordion-toggle collapsed">
                                @item.GroupName
                            </a>
                        </h4>
                    </div>
                    <div class="panel-collapse collapse" id="@item.Id" style="height: 0px;">
                        <div class="panel-body">
                            @{ 
                                GroupMaster _rest = new GroupMaster();
                                _rest = item;
                            }
                            @Html.Partial("_StudentDetails", _rest)
                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
    </div>

</div>
