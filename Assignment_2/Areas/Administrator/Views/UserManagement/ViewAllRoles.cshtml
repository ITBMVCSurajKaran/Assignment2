@model IEnumerable<Assignment_2.Models.RoleDTO>
@{
    Layout = "~/Views/Shared/_LayoutOperation.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">All Roles</h1>
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Add Role", "AddRole", null, new { @class = "btn btn-default" })
    </p>
    <table class="table">
        <tr>
            <th>
                Role
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @if (item.RoleName.ToLower() != "admin")
                {
                        @Html.ActionLink("Delete", "DeleteUserRole",
                   new { RoleName = item.RoleName },
                   new
                   {
                       onclick =
                   "return confirm('Are you sure you wish to delete this role?');"
                   })
                    }
                </td>

            </tr>
        }
    </table>

</div>